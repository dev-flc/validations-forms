root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
insert_final_newline     = true
max_line_length          = 80
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size  = 2
charset      = utf-8

[*.ejs]
indent_style = space
indent_size  = 2
charset      = utf-8

[*.{scss,sass}]
indent_style = space
indent_size  = 2
charset      = utf-8

[*.json]
indent_style = space
indent_size  = 2

[*.{diff,md}]
trim_trailing_whitespace = false
